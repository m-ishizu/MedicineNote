<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ishidzumichiko.medicinenote.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvPhonetic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phonetic"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@+id/etxPhonetic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="textPhonetic"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@+id/etxName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="textPersonName"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvSex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sex"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbtMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvBloodType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bloodType"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbtBloodA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloodA"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtBloodB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloodB"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtBloodO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloodO"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtBloodAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bloodAB"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBirthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/birthday"/>
                <EditText
                    android:id="@+id/etxBirthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@+id/etxAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="textPostalAddress"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@+id/etxPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="phone"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/contact"/>
                <EditText
                    android:id="@+id/etxContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvPhone1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phone1"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@+id/etxPhone1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="phone"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvAllergy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/allergy" />
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbtYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/no"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/history"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbtYes1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes1"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtNo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/no1"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckbAsthma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asthma"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
                <CheckBox
                    android:id="@+id/ckbUlcer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ulcer"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
                <CheckBox
                    android:id="@+id/ckbKidney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kidney"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckbLiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/liver"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
                <CheckBox
                    android:id="@+id/ckbDm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dm"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
                <CheckBox
                    android:id="@+id/ckbHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckbProstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prostate"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
                <CheckBox
                    android:id="@+id/ckbGlaucoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/glaucoma"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
                <CheckBox
                    android:id="@+id/ckbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/note"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@+id/etxNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="text"
                    android:ems="10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvSideEffect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sideEffect"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbtYes2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes2"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <RadioButton
                        android:id="@+id/rbtNo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/no2"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/etxSideEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/next"/>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>
